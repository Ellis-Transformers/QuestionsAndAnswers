// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id        Int                   @id @default(autoincrement())
  questions QuestionsAndAnswers[]
  Questions Questions[]
}

model Questions {
  id                   Int                   @id @default(autoincrement())
  product              Int
  product_id           Products              @relation(fields: [product], references: [id])
  question_body        String
  question_date        DateTime              @default(now())
  asker_name           String
  question_helpfulness Int
  reported             Boolean
  QuestionsAndAnswers  QuestionsAndAnswers[]
}

model QuestionsAndAnswers {
  id          Int       @id @default(autoincrement())
  question    Int
  answers     Answers[]
  question_id Questions @relation(fields: [question], references: [id])
  Products    Products @relation(fields: [productsId], references: [id])
  productsId  Int
}

model Answers {
  id                    Int                  @id @default(autoincrement())
  body                  String
  answer_name           String
  date                  String
  helpfulness           Boolean
  photos                Photos[]
  QuestionsAndAnswers   QuestionsAndAnswers? @relation(fields: [questionsAndAnswersId], references: [id])
  questionsAndAnswersId Int
  AnswerPhotos          AnswerPhotos[]
}

model Photos {
  id           Int            @id @default(autoincrement())
  photo        String
  Answers      Answers       @relation(fields: [answersId], references: [id])
  answersId    Int
  AnswerPhotos AnswerPhotos[]
}

model AnswerPhotos {
  id        Int     @id @default(autoincrement())
  answer    Int
  photos    Int[]
  answer_id Answers @relation(fields: [answer], references: [id])
  photos_id Photos  @relation(fields: [photos], references: [id])
}
