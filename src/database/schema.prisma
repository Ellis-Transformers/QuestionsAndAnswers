generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://kjunghoan:password@127.0.0.1:5432/questions_and_answers"
}

model Questions {
  id           Int       @id @unique @default(autoincrement())
  product_id   Int?
  body         String?
  date_written BigInt?
  asker_name   String?
  asker_email  String?
  reported     Boolean   @default(false)
  helpful      Int       @default(0)
  Answers      Answers[]

  @@index([helpful])
}

model Answers {
  id             Int        @id @unique @default(autoincrement())
  question_id    Int?
  body           String?
  date_written   BigInt?
  answerer_name  String?
  answerer_email String?
  reported       Boolean    @default(false)
  helpful        Int        @default(0)
  Photos         Photos[]
  Questions      Questions? @relation(fields: [questionsId], references: [id])
  questionsId    Int?

  @@index([helpful, answerer_name])
}

model Photos {
  id        Int     @id @unique @default(autoincrement())
  answer_id Int?
  url       String?

  Answers Answers? @relation(fields: [answer_id], references: [id])
}
