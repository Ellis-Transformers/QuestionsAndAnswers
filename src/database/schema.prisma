// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@127.0.0.1:5432/questions_and_answers"
}

model Products {
  id        Int         @id @unique @default(autoincrement())
  Questions Questions[]
}

model Questions {
  id           Int       @id @unique @default(autoincrement())
  product_id   Int?
  body         String?
  date_written DateTime? @default(now())
  asker_name   String?
  asker_email  String?
  reported     Boolean   @default(false)
  helpful      Int       @default(0)
  Answers      Answers[]

  products Products? @relation(fields: [product_id], references: [id])

  @@index([helpful])
}

model Answers {
  id             Int      @id @unique @default(autoincrement())
  question_id    Int?
  body           String?
  date_written   DateTime @default(now())
  answerer_name  String?
  answerer_email String?
  reported       Boolean  @default(false)
  helpful        Int      @default(0)
  Photos         Photos[]

  Questions Questions? @relation(fields: [question_id], references: [id])

  @@index([helpful, answerer_name])
}

model Photos {
  id         Int     @id @unique @default(autoincrement())
  answers_Id Int?
  url        String?

  Answers Answers? @relation(fields: [answers_Id], references: [id])
}
